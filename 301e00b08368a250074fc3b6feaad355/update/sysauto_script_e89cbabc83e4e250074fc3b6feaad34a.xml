        <script><![CDATA[  var record = new GlideRecord('x_1553854_inventor_electronic_products');
  record.query();
    while(record.next()){
	var rightNow = new GlideDateTime();
	var time = new GlideDateTime(record.purchasedate);
	//var durationOfUse = gs.dateDiff(rightNow,record.purchasedate,true);
	var dur = GlideDateTime.subtract(time,rightNow);
    gs.info("DueSoon record = " + record.productname);
	record.durationofuse=dur;
	var du = dur.getDayPart();
	var perday = record.price;
	var avg = perday/du;
	record.unitpriceperday=avg;
	//record.unitpriceperday=perday;
	gs.info(dur.getDisplayValue());
	record.update();
  }
  
]]></script>
